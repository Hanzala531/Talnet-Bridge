{
  "scripts": {
    "test": "node tests/runTests.js",
    "test:auth": "node tests/runTests.js auth",
    "test:courses": "node tests/runTests.js courses", 
    "test:chat": "node tests/runTests.js chat",
    "test:jobs": "node tests/runTests.js jobs",
    "test:students": "node tests/runTests.js students",
    "test:employers": "node tests/runTests.js employers",
    "test:integration": "node tests/runTests.js integration",
    "test:unit": "node tests/runTests.js unit",
    "test:health": "node tests/runTests.js health",
    "test:coverage": "nyc --reporter=html --reporter=text npm test",
    "test:watch": "nodemon --exec 'npm test' --ext js"
  },
  "mocha": {
    "timeout": 10000,
    "recursive": true,
    "exit": true,
    "spec": "tests/**/*.test.js"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "tests/**/*",
      "node_modules/**/*"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 50
  }
}
