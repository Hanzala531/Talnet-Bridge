# Test Environment Configuration
NODE_ENV=test
PORT=4001

# Test Database (MongoDB Memory Server will be used instead)
MONGODB_URI=mongodb://localhost:27017/talentbridge_test

# JWT Configuration for Testing
ACCESS_TOKEN_SECRET=test-access-token-secret-key-for-testing-only-very-long-string
REFRESH_TOKEN_SECRET=test-refresh-token-secret-key-for-testing-only-very-long-string
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# CORS Configuration for Testing
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Redis Configuration (Disabled for tests)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Test Stripe Configuration (Use test keys)
STRIPE_SECRET_KEY=sk_test_test_stripe_secret_key_for_testing
STRIPE_PUBLISHABLE_KEY=pk_test_test_stripe_publishable_key_for_testing
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret_for_testing

# File Upload Limits for Testing
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging Configuration
LOG_LEVEL=error

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Test Email Configuration (Mock)
EMAIL_SERVICE=test
EMAIL_USER=test@talentbridge.com
EMAIL_PASS=test-password
EMAIL_FROM=Test Talent Bridge <test@talentbridge.com>

# Cloudinary Configuration (Mock for testing)
CLOUDINARY_CLOUD_NAME=test-cloud
CLOUDINARY_API_KEY=test-api-key
CLOUDINARY_API_SECRET=test-api-secret

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=test-session-secret-for-testing-only
