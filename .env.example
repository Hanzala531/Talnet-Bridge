# Environment Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/talentbridge?retryWrites=true&w=majority
# For local development use: mongodb://localhost:27017/talentbridge
DB_NAME=talentbridge

# JWT Configuration (Generate strong secrets in production)
JWT_SECRET=talent_bridge_jwt_secret_key_2025_make_this_very_long_and_random_string_for_security
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=talent_bridge_refresh_token_secret_2025_another_long_random_string
REFRESH_TOKEN_EXPIRY=10d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_key

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
# For production: redis://username:password@host:port

# Stripe Configuration (Use test keys for development)
STRIPE_SECRET_KEY=sk_test_51234567890abcdefghijklmnopqrstuvwxyz1234567890abcdefghijklmnopqrstuvwxyz
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdefghijklmnopqrstuvwxyz1234567890abcdefghijklmnopqrstuvwxyz
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdefghijklmnopqrstuvwxyz

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=talentbridge.noreply@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=Talent Bridge <noreply@talentbridge.com>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4

# API Keys for External Services
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Webhook URLs (for development)
WEBHOOK_BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=talent_bridge_session_secret_2025_random_string

# Additional Configuration for Production
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
